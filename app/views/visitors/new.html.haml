- content_for :title do
  Rails Bootstrap
- content_for :description do
  Rails Bootstrap Example
#myCarousel.carousel.slide
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
  .carousel-inner
    .item.active
      %img{:src => "http://lorempixel.com/1170/800/city/9"}/
      .carousel-caption.text-center
        %h4= Visitor::IMAGE_LABELS[0]
    .item
      %img{:src => "http://lorempixel.com/1170/800/city/7"}/
      .carousel-caption.text-center
        %h4= Visitor::IMAGE_LABELS[1]
    .item
      %img{:src => "http://lorempixel.com/1170/800/city/6"}/
      .carousel-caption.text-center
        %h4= Visitor::IMAGE_LABELS[2]
  %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel"} ‹
  %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel"} ›
.text-center
  %h5 Select a Favorite
  #modal-form.modal{:style => "display: #{@visitor.errors.any? ? 'block' : 'none';}"}
    = simple_form_for @visitor do |f|
      .modal-header
        %a.close{"data-dismiss" => "modal"} ×
        %h3 Select a Favorite
      .modal-body
        = f.error_notification
        = f.input :favorite, :collection => Visitor::IMAGE_LABELS, label: false, as: :radio_buttons, :item_wrapper_class => 'inline'
        = f.input :comment, label: false, :placeholder => 'Add a comment...'
      .modal-footer
        = f.submit "Choose!", :class => "btn btn-primary"
        %a.btn{"data-dismiss" => "modal", :href => "#"} Close
  #call-to-action
    %a.btn.btn-primary.btn-large{"data-toggle" => "modal", :href => "#modal-form"} Choose!